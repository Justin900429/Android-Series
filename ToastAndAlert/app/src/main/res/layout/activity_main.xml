<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_custoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom toast"
        app:layout_constraintBottom_toTopOf="@+id/btn_orial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_orial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="common alert"
        app:layout_constraintBottom_toTopOf="@+id/btn_choal_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_custoa" />

    <Button
        android:id="@+id/btn_choal_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choice Alert 1"
        app:layout_constraintBottom_toTopOf="@+id/btn_choal_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_orial" />

    <Button
        android:id="@+id/btn_choal_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choice alert 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_num"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choal_1" />

    <TextView
        android:id="@+id/txt_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:textSize="20sp"
        android:text="No number"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_choal_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_choal_1" />

</androidx.constraintlayout.widget.ConstraintLayout>